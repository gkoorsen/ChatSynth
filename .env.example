# .env.example
# ChatSynth Environment Variables Template
# Copy this file to .env.local for local development

# Backend API Configuration (REQUIRED in production)
REACT_APP_LAMBDA_ENDPOINT=https://your-api-gateway-url.execute-api.region.amazonaws.com/prod/generate

# Environment identifier (optional)
REACT_APP_ENV=development

# Debug mode (optional - shows configuration logs)
REACT_APP_DEBUG_MODE=false

# Optional: Analytics or monitoring
REACT_APP_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=

# ==================================================
# .env.local (for local development - NOT committed)
# ==================================================
# Create this file locally with your actual values:
# 
# REACT_APP_LAMBDA_ENDPOINT=https://your-actual-endpoint.execute-api.us-east-1.amazonaws.com/prod/generate
# REACT_APP_ENV=development
# REACT_APP_DEBUG_MODE=true

# ==================================================
# .env.production (example - use Amplify Console instead)
# ==================================================
# Don't create this file - use AWS Amplify Console for production variables
# 
# REACT_APP_LAMBDA_ENDPOINT=https://prod-api.execute-api.us-east-1.amazonaws.com/prod/generate
# REACT_APP_ENV=production
# REACT_APP_DEBUG_MODE=false
